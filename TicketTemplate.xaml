<UserControl x:Class="SkyTrack.TicketTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SkyTrack"
             mc:Ignorable="d" Height="210" Width="384">
    <UserControl.Resources>
        <!-- Трансформация для масштабирования -->
        <Style x:Key="CardHoverStyle" TargetType="Border">
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                             To="1.02" Duration="0:0:0.15"/>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                             To="1.02" Duration="0:0:0.15"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                             To="1" Duration="0:0:0.15"/>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                             To="1" Duration="0:0:0.15"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="HoverButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#007BFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="MinHeight" Value="28"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="4" Opacity="0.15" ShadowDepth="0"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0056b3"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="8" Opacity="0.3" ShadowDepth="2"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Border CornerRadius="10" Background="White" Padding="14" Margin="10"
        BorderBrush="#DDE1E6" BorderThickness="1"
        Style="{StaticResource CardHoverStyle}">

        <StackPanel>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,6">
                <TextBlock Text="✈" FontSize="18" Margin="0,0,6,0"/>
                <TextBlock Text="Рейс 002" FontWeight="Bold" FontSize="18"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                <TextBlock Text="📍" FontSize="18" Margin="0,0,6,0"/>
                <TextBlock Text="Київ → Одеса" FontSize="18" Foreground="#333"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                <TextBlock Text="🕒" FontSize="18" Margin="0,0,6,0"/>
                <TextBlock Text="12:30" FontSize="18" Foreground="#333"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                <TextBlock Text="👥" FontSize="18" Margin="0,0,6,0"/>
                <TextBlock Text="Вільних місць: 30" FontSize="18" Foreground="#333"/>
            </StackPanel>

            <Button Content="Забронювати" Style="{StaticResource HoverButtonStyle}"
                FontSize="16" MinHeight="36" HorizontalAlignment="Stretch"/>
        </StackPanel>
    </Border>
</UserControl>
